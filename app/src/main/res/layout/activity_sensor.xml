<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.leica.learnapp.SensorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sensorView7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sensorView1"
                android:textSize="24sp"
                android:text="textView1"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sensorView2"
                android:textSize="24sp"
                android:text="textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView3"
                android:id="@+id/sensorView3"
                android:textSize="24sp"
                android:layout_below="@+id/sensorView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView4"
                android:id="@+id/sensorView4"
                android:textSize="24sp"
                android:layout_below="@+id/sensorView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView5"
                android:id="@+id/sensorView5"
                android:layout_below="@+id/sensorView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="24sp"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView6"
                android:id="@+id/sensorView6"
                android:textSize="24sp"
                android:layout_below="@+id/sensorView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView7"
                android:id="@+id/sensorView7"
                android:textSize="24sp"
                android:layout_alignTop="@+id/sensorView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView8"
                android:id="@+id/sensorView8"
                android:textSize="24sp"
                android:layout_below="@+id/sensorView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="0"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
